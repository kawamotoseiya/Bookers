<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <div class="navbar navbar-default navbar-inverse">
    <div class="container">
    <nav class="nav navbar-nav navbar-left">
      <h3 class="text-primary">Bookers</h3>
    </nav>
    <nav>
      <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
            <h4>
            <span class="glyphicon glyphicon-home home">
              <%= link_to 'Home', user_path(current_user.id) %>
            </span>
            <spam class="glyphicon glyphicon-user users">
              <%= link_to 'Users', users_path %>
            </spam>
            <span class="glyphicon glyphicon-book books"">
              <%= link_to 'Books', books_path %>
            </span>
            <span class="glyphicon glyphicon-log-out logout">
              <%= link_to "Logout", destroy_user_session_path, method: :delete %>
            </span>
            </h4>
          <% else %>
          <h4>
            <span class="glyphicon glyphicon-home home">
              <%= link_to 'Home', homes_action1_path %>
            </span>
            <span class="glyphicon glyphicon-link about">
              <%= link_to 'About', homes_action2_path %>
            </span>
            <span class="glyphicon glyphicon-link about">
              <%= link_to "Sign up", new_user_registration_path %>
            </span>
            <span class="glyphicon glyphicon-log-in sign_in">
              <%= link_to "Log in", new_user_session_path %>
            </span>
          </h4>
      <% end %>
      </ul>
    </nav>
    </div>
  </div>
  </body>
  <%= yield %>
</html>
