<div class="container-fluid">
	<div class="row">
		<div class="col-xs-3">
<%= render 'books/list', books:@books,user:current_user %>
		</div>
		<div class="col-xs-9">
		<table class="table table-striped">
			<h2>Books</h2>
			<thead>
				<tr>
					<th class="col-xs-2"></th>
					<th class="col-xs-2">Title</th>
					<th class="col-xs-5">Opinion</th>
					<th colspan="3"></th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
					<tr>
						<td><%= attachment_image_tag @user, :profile_image, :fill, 10, :px, 10, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></td>
						<td><%= link_to book.name,book_path(book.id) %>
						</td>
						<td><%= book.body %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
		</div>
	</div>
</div>