<div class="container-fluid">
	<div class="row">
		<div class="col-xs-3">
<%= render 'books/list', books:@books,user:current_user %>
		</div>
		<div class="col-xs-9">
		<table class="table table-striped">
			<h2>Books</h2>
			<thead>
				<tr>
					<th class="col-xs-2"></th>
					<th class="col-xs-2">Title</th>
					<th class="col-xs-5">Opinion</th>
					<th colspan="3"></th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
					<tr>
						<td><%= attachment_image_tag @user, :profile_image, :fill, 5, 5, format:'jpeg', fallback: "no_image.jpg", size:'50x50' %></td>
						<td><%= link_to book.title,book_path(book.id) %>
						</td>
						<td><%= book.body %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
		</div>
	</div>
</div>
<footer>
  <div class="container">
  	<div class="row">
    	<div class="col-xs-3 col-xs-offset-9">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>