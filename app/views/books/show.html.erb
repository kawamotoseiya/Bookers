<div class="container-fluid">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'books/list', books:@books, user:current_user %>
		</div>
	<div class="col-xs-9">
<h2>Book detail</h2>
<table class="table table-striped">
	<thead>
		<tr>
			<th class="col-xs-2">Image</th>
			<th class="col-xs-2">Title</th>
			<th class="col-xs-5">Opinion</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
			<tr>
				<td><%= attachment_image_tag @user, :profile_image, :fill, 10, :px, 10, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></td>
				<td><%= @book.name %></td>
				<td><%= @book.body %></td>
				<% if @book.user == current_user %>
				<td><%= link_to "Edit", edit_book_path(@book) %></td>
				<% end %>
				<% if @book.user == current_user %>
				<td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか?"} %></td>
				<% end %>
			</tr>
	</tbody>
</table>
	</div>
	</div>
</div>