<div class="container-fluid">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'books/list', books:@books, user:current_user %>
		</div>
		<div class="col-xs-9">
		<h2>Users</h2>
		<table class="table table-striped">
			<thead>
				<tr>
					<th class="col-xs-2">Image</th>
					<th class="col-xs-7">name</th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
					<tr>
						<td><%= attachment_image_tag @user, :profile_image, :fill, 10, :px, 10, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></td>
						<td><%= user.name %></td>
						<td><%= link_to "Show", user_path(user) %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	    </div>
	</div>
</div>