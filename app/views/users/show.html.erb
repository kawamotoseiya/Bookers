<div class="container-fluid">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'books/list', books:@books, user:current_user %>
		</div>
		<div class="col-xs-9">
		<h2>Books</h2>
		<table class="table table-striped">
			<thead>
				<tr>
					<th class="col-xs-3">Title</th>
					<th class="col-xs-6">Opinion</th>
					<th colspan="2"></th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
					<tr>
						<td><%= link_to book.name, book_path(book.id) %>
						</td>
						<td><%= book.body %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
		</div>
	</div>
</div>